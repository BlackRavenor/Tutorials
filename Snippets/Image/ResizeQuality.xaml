<StackPanel
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" UseLayoutRounding="True" Orientation="Horizontal">

  <Grid RenderOptions.BitmapScalingMode="Linear" Width="500">
    <Grid.Background>
        <ImageBrush ImageSource="Images/bg.jpg" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
    </Grid.Background>
    <TextBlock Text="Linear" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10" />
  </Grid>

   <Grid RenderOptions.BitmapScalingMode="HighQuality" Width="500">
    <Grid.Background>
        <ImageBrush ImageSource="Images/bg.jpg" Stretch="UniformToFill" AlignmentX="Center" AlignmentY="Center"/>
    </Grid.Background>
    <TextBlock Text="HighQuality" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="10" />
  </Grid>
</StackPanel>