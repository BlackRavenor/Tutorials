                                    <Path.Fill>
                                        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                                            <GradientStop Color="#FF14FFED" Offset="0"/>
                                            <GradientStop Color="#FF005569" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                                <TextBlock Text="New Messages:  " Foreground="#FFFCFCFC" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="3.5"/>
                                <TextBlock Text="{Binding NewMessages}" Foreground="#FF41B3C0" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="4.5"/>
                            </StackPanel>
                        </Viewbox>
                        <Viewbox Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" Margin="0,160,0,0">
                                <Path Data="M24.4453333333331,79.0250006561279C24.4453333333331,111.758000656128 47.742,135.053667336508 80.4750000000001,135.053667336508 113.208,135.053667336508 136.50466666667,111.758000656128 136.50466666667,79.0250006561279 136.50466666667,46.2920006561279 113.208,22.9953339757489 80.4750000000001,22.9953339757489 47.742,22.9953339757489 24.4453333333331,46.2920006561279 24.4453333333331,79.0250006561279 M43.4010000000001,70.8320006561279L50.9640000000001,70.8320006561279C52.3180000000001,63.9470006561279 55.366,58.0770006561279 59.4280000000001,53.7880006561279 65.5240000000001,47.0160006561279 73.7630000000001,43.1790006561279 83.8090000000001,43.1790006561279 90.5800000000001,43.1790006561279 96.2250000000001,44.8720006561279 99.9490000000001,46.6770006561279L97.1270000000001,57.1740006561279C94.1930000000001,55.5950006561279 89.5650000000001,54.1270006561279 84.485,54.1270006561279 78.842,54.1270006561279 73.8760000000001,56.1590006561279 70.1510000000001,60.3350006561279 67.781,62.8180006561279 66.088,66.5420006561279 65.1850000000001,70.8320006561279L94.757,70.8320006561279 94.757,77.8300006561279 63.8300000000001,77.8300006561279C63.6050000000001,79.0710006561279,63.6050000000001,80.4260006561279,63.6050000000001,81.7800006561279L63.6050000000001,83.6990006561279 94.757,83.6990006561279 94.757,90.5840006561279 64.8460000000001,90.5840006561279C65.6370000000001,95.4370006561279 67.3300000000001,99.0480006561279 69.7,101.645000656128 73.5380000000001,105.820000656128 78.9550000000001,107.741000656128 84.8240000000001,107.741000656128 90.355,107.741000656128 95.5470000000001,105.820000656128 98.1430000000001,104.354000656128L100.513,114.511000656128C96.7890000000001,116.769000656128 90.468,119.027000656128 83.2440000000001,119.027000656128 72.973,119.027000656128 63.7180000000001,114.963000656128 57.7360000000001,107.401000656128 54.1240000000001,103.224000656128 51.641,97.5820006561279 50.6250000000001,90.5840006561279L43.4