                                    <Path.Fill>
                                        <LinearGradientBrush EndPoint="0.75,0.933" StartPoint="0.25,0.067">
                                            <GradientStop Color="#FF14FFED" Offset="0"/>
                                            <GradientStop Color="#FF005569" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Path.Fill>
                                </Path>
                                <TextBlock Text="Credits:  " Foreground="#FFFCFCFC" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="3.5"/>
                                <TextBlock Text="{Binding Credits}" Foreground="#FF41B3C0" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="4.5"/>
                            </StackPanel>
                        </Viewbox>
                        <Viewbox Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <StackPanel Orientation="Horizontal" Margin="0,160,0,0">
                                <Decorator Height="38"/>
                                <TextBlock Text="Next Schedule Game:  " Foreground="#FFFCFCFC" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="3.5"/>
                                <TextBlock Text="{Binding NextGame}" Foreground="#FF41B3C0" VerticalAlignment="Center" FontSize="24"
                                           noesis:Text.Stroke="{StaticResource Brush.Text.Shadow}" noesis:Text.StrokeThickness="4.5"/>
                            </StackPanel>
                        </Viewbox>
                    </Grid>
                    <Grid x:Name="PlayContainer" Grid.Row="2" IsEnabled="False"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          noesis:EventToCommand.Event="IsEnabledChanged"
                          noesis:EventToCommand.Command="{Binding SlideCompletedCommand}"
                          noesis:EventToCommand.CommandParameter="{Binding ElementName=PlayContainer1}">
                        <Border x:Name="PlayContainer1" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>
                        <Border x:Name="PlayContainer2" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
            <ControlTemplate.Triggers>
                <DataTrigger Binding="{Binding State}" Value="Play">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                    </DataTrigger.EnterActions>
                    <DataTrigger.ExitActions>
                        <BeginStoryboard Storyboard="{StaticResource FadeOut}"/>
                    </DataTrigger.ExitActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding PlayScreenDirection}" Value="Next">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SlideNext}"/>
                    </DataTrigger.EnterActions>
                </DataTrigger>
                <DataTrigger Binding="{Binding PlayScreenDirection}" Value="Prev">
                    <DataTrigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource SlidePrev}"/>
                    </DataTrigger.EnterActions>
                </DataTrigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
